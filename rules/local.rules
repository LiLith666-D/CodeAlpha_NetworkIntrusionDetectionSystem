# ===============================
# ICMP Ping Detection
# ===============================
alert icmp any any -> any any (
    msg:"ICMP Ping Detected";
    itype:8;
    sid:1000001;
    rev:1;
)

# ===============================
# TCP SYN Scan Detection
# ===============================
alert tcp any any -> any any (
    flags:S;
    msg:"TCP SYN Scan Detected";
    detection_filter:track by_src, count 10, seconds 5;
    sid:1000002;
    rev:1;
)

# ===============================
# SSH Connection Attempt
# ===============================
alert tcp any any -> any 22 (
    flags:S;
    msg:"SSH Connection Attempt Detected";
    sid:1000003;
    rev:1;
)

# ===============================
# SSH Brute Force Detection
# (Snort 3 uses detection_filter)
# ===============================
alert tcp any any -> any 22 (
    flags:S;
    msg:"Possible SSH Brute Force Attack";
    detection_filter:track by_src, count 5, seconds 60;
    sid:1000004;
    rev:1;
)

# ===============================
# FTP Connection Attempt
# ===============================
alert tcp any any -> any 21 (
    flags:S;
    msg:"FTP Connection Attempt Detected";
    sid:1000005;       
    rev:1;
)
 
